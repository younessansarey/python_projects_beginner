lesson_number = int(input('How many courses you have? '))
lesson_values = []  # List to store the lesson value
lesson_weights = []  # List to store the lesson weight
lesson_names = [] # List to store the lesson name

i = 1
while i <= lesson_number:
    lesson_name = input(f'Please enter lessen no. {i} name: ')
    lesson_score = int(input(f'Please enter {lesson_name} score: '))
    lesson_value = int(input(f'Please enter {lesson_name} value: '))
    lesson_weight = lesson_score * lesson_value
    lesson_names.append(lesson_name) # Store the lesson name in the list
    lesson_weights.append(lesson_weight) # Store the lesson weight in the list
    lesson_values.append(lesson_value) # Store the lesson value in the list
    print (f'The weight of {lesson_name} is = {lesson_weight}')
    i = i + 1

total_value = sum (lesson_values)
print (f'The total sum of lesson value is: {total_value}')

total_weight = sum (lesson_weights)
print (f'The total sum of lesson weights is: {total_weight}')

user_gpa = (total_weight/total_value)
print (f'Your GPA is: {user_gpa}')
